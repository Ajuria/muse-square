---
import BaseLayout from '../../layouts/BaseLayout.astro';

// Mock data for now - will replace with API call
const availableLocations = [
  { 
    location_id: 'LOC001', 
    location_label: 'Musée de la Romanité – Nîmes',
    location_type: 'indoor',
    address: '16 Boulevard des Arènes, 30000 Nîmes'
  },
  { 
    location_id: 'LOC002', 
    location_label: 'Palais des Papes – Avignon',
    location_type: 'indoor',
    address: 'Place du Palais, 84000 Avignon'
  },
  { 
    location_id: 'LOC003', 
    location_label: 'Théâtre Antique – Orange',
    location_type: 'outdoor',
    address: 'Rue Madeleine Roch, 84100 Orange'
  },
];
---

<BaseLayout title="Ajouter un lieu - Muse Square" hideSurveyCta={true}>
  <div class="max-w-4xl mx-auto py-12 px-4">
    
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold mb-2">Sélectionnez votre lieu</h1>
      <p class="text-gray-600">
        Choisissez le lieu pour lequel vous souhaitez activer l'intelligence prédictive.
      </p>
    </div>

    <!-- Location Grid -->
    <div class="grid gap-4">
      {availableLocations.map(location => (
        <a 
          href={`/locations/${location.location_id}/onboarding`}
          class="block p-6 bg-white border-2 border-gray-200 rounded-lg hover:border-black hover:shadow-md transition-all"
        >
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <h3 class="text-xl font-semibold mb-2">{location.location_label}</h3>
              <p class="text-sm text-gray-600 mb-1">{location.address}</p>
              <span class="inline-block px-3 py-1 text-xs font-medium bg-gray-100 rounded-full">
                {location.location_type === 'indoor' ? 'Intérieur' : 'Extérieur'}
              </span>
            </div>
            <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        </a>
      ))}
    </div>

    <!-- Back Link -->
    <div class="mt-8">
      <a href="/app" class="text-gray-600 hover:text-black">
        ← Retour à l'app
      </a>
    </div>

  </div>
</BaseLayout>