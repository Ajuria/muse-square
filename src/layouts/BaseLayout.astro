---
const { title = 'Muse Square', description = 'Data & Engagement', noIndex = false } = Astro.props;
import '../styles/global.css';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
const plausible = import.meta.env.PUBLIC_PLAUSIBLE_DOMAIN;
---
<!doctype html>
<html lang="fr" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    {noIndex && <meta name="robots" content="noindex" />}
    {plausible && (<script defer data-domain={plausible} src="https://plausible.io/js/script.js"></script>)}
  </head>
  <body class="h-full bg-background text-text">
    <a href="#main" class="skip-link">Aller au contenu principal</a>
    <Nav />
    <main id="main">
      <slot />
    </main>
    <Footer />
    <script type="module" src="/kpi.js"></script>
  </body>
</html>
