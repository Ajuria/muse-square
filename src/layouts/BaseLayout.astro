---
const { title = 'Muse Square' } = Astro.props;
import '../styles/global.css';
import Nav from '../components/Nav.astro';
---
<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2">
      Aller au contenu principal
    </a>

    <!-- Site header (Nav renders its own header + ms-container/sticky) -->
    <Nav />

    <!-- Main content rail -->
    <main id="main" class="ms-container ms-first-tight">
      <slot />
    </main>
