---
const { title = 'Muse Square' } = Astro.props;
import '../styles/global.css';
import Nav from '../components/Nav.astro';
---
<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class="h-full bg-white text-slate-900">
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2">
      Aller au contenu principal
    </a>

    <!-- âœ… Nav appears here -->
    <Nav />

    <main id="main" class="mx-auto max-w-[1140px] px-[24px]">
      <slot />
    </main>
  </body>
</html>
